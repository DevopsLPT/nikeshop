<div class="container mx-auto px-4 py-8 bg-gray-900">
    <h1 class="text-2xl font-bold text-white mb-6">Order Details</h1>
    
        <!-- Order Info -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Order Information</h2>
        <div class="grid grid-cols-2 gap-4">
        <div>
            <p class="text-sm text-gray-500">Order ID</p>
            <p class="text-lg font-medium text-gray-800"><%= order._id %></p>
        </div>
        <div>
            <p class="text-sm text-gray-500">Order Date</p>
            <p class="text-lg font-medium text-gray-800"><%= new Date(order.date).toLocaleDateString() %></p>
        </div>
        <div>
            <p class="text-sm text-gray-500">Order Status</p>
            <p class="text-lg font-medium text-gray-800"><%= order.status %></p>
        </div>
        <div>
            <p class="text-sm text-gray-500">Total Amount</p>
            <p class="text-lg font-medium text-gray-800">$<%= order.total %></p>
        </div>
        </div>
    </div>
  
    <!-- Customer Info -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Customer Information</h2>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-500">Name</p>
          <p class="text-lg font-medium text-gray-800"><%= order.name %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Email</p>
          <p class="text-lg font-medium text-gray-800"><%= order.email %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Phone</p>
          <p class="text-lg font-medium text-gray-800"><%= order.phone %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Address</p>
          <p class="text-lg font-medium text-gray-800"><%= order.address.province %>, <%= order.address.district %>, <%= order.address.commune %>, <%= order.address.street %></p>
        </div>
      </div>
    </div>
  
    <!-- Product List -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Products in Order</h2>
      <table class="min-w-full table-auto border-collapse">
        <thead>
          <tr class="bg-gray-100 text-left text-sm font-semibold text-gray-600">
            <th class="px-4 py-2">Product Name</th>
            <th class="px-4 py-2">Quantity</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% order.products.forEach(product => { %>
            <tr class="border-t text-gray-700 text-sm">
              <td class="px-4 py-2"><%= product.productId %></td>
              <td class="px-4 py-2"><%= product.quantity %></td>
              <td class="px-4 py-2">$<%= product.price %></td>
              <td class="px-4 py-2">$<%= (product.price * product.quantity) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  