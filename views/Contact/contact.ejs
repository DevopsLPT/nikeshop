<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl text-black font-bold mb-6 text-center">Contact Us</h2>
    <form
      action="/contact" 
      method="POST" 
      class="space-y-4"
    >
      <!-- Name Field -->
      <div>
        <label
          for="name"
          class="block text-gray-800"
        >
          Name
        </label>
        <input
          type="text"
          name="name"
          id="name"
          value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
          class="w-full px-4 py-2 mt-2 border rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
  
      <!-- Email Field -->
      <div>
        <label
          for="email"
          class="block text-gray-800"
        >
          Email
        </label>
        <input
          type="email"
          name="email"
          id="email"
          value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
          class="w-full px-4 py-2 mt-2 border rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
  
      <!-- Message Field -->
      <div>
        <label
          for="message"
          class="block text-gray-800"
        >
          Message
        </label>
        <textarea
          name="message"
          id="message"
          rows="5"
          class="w-full px-4 py-2 mt-2 border rounded-md bg-white text-black focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        ><%= typeof formData !== 'undefined' ? formData.message : '' %></textarea>
      </div>
  
      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200"
      >
        Send Message
      </button>
    </form>
  </div>
  